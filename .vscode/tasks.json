{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo build",
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "cargo run wgpu_renderer_example",
			"type": "cargo",
			"command": "run",
			"args": ["--bin", "wgpu_renderer_example"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "cargo run wgpu_gui_example",
			"type": "cargo",
			"command": "run",
			"args": ["--bin", "wgpu_gui_example"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "cargo run --release",
			"type": "cargo",
			"command": "run",
			"args": ["--release"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "wasm-pack wgpu_renderer_example",
			"type": "shell",
			// "command": "RUSTFLAGS=--cfg=web_sys_unstable_apis wasm-pack build --target web",
			"command": "wasm-pack build wgpu_renderer_example --target web",
			"problemMatcher": [
				"$rustc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "python server",
			"type": "shell",
			"windows": {
				"command": "python -m http.server 8000",
			},
			"linux": {
				"command": "python3 -m http.server 8000",
			},
			"problemMatcher": []
		}
	]
}